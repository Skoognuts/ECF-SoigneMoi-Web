{{ form_start(form) }}
    {% if dateOrderError == true %}
        <div class="alert alert-warning">La date de fin de séjour ne peut pas être antérieure à la date de début de séjour</div>
    {% endif %}
    {% if pastDateError == true %}
        <div class="alert alert-warning">Les dates séléctionnées ne sont pas correctes</div>
    {% endif %}

    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
        {{ form_label(form.reason) }}
        {{ form_widget(form.reason) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
        {{ form_label(form.date_from) }}
        {{ form_widget(form.date_from) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
        {{ form_label(form.date_to) }}
        {{ form_widget(form.date_to) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
        {{ form_label(form.specialty) }}
        {{ form_widget(form.specialty) }}
    </div>

    <div class="d-flex flex-row justify-content-center">
        <button class="btn btn-primary">{{ button_label|default('Sélectionner un Docteur') }}</button>
    </div>
{{ form_end(form) }}
