{% extends 'base.html.twig' %}

{% block title %}Modifier la Prescription{% endblock %}

{% block body %}

    {{ include('_parts/_header.html.twig') }}

    <main class="d-flex flex-column align-items-center">
        <div class="card user-card mt-3 mb-3 p-2">
            <div class="d-flex flex-row align-items-center mb-2">
                <img style="width: 60px; height: auto;" src="{{ asset('images/user.png') }}" alt="User">
                <div class="d-flex flex-column">
                    <h2 class="m-0 ms-2">{{ stay.user.firstname }} {{ stay.user.lastName }}</h2>
                    <p class="m-0 ms-2">{{ stay.reason }} ({{ stay.doctor.specialty.name }})</p>
                </div>
            </div>
        </div>

        <div class="card user-card align-items-center mb-2 p-2">
            <h3>Modifier la prescription</h3>
            {{ include('prescription/_edit_form.html.twig') }}
        </div>

        <form>
            <a class="btn btn-light w-100" href="{{ path('app_main_show', {'id' : stay.id}) }}">Retour</a>
        </form>
    </main>

    {{ include('_parts/_footer.html.twig') }}

{% endblock %}
