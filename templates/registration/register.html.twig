{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}

    {{ include('_parts/_header.html.twig') }}

    <main class="center-wrapper">
        <h2 class="mb-3 font-weight-normal text-center">Enregistrement</h2>
        {{ form_start(registrationForm) }}
            {% if fakeEmailError == true %}
                <div class="alert alert-warning">L'adresse e-mail renseignée n'est pas correcte</div>
            {% endif %}
            {% if existingUserError == true %}
                <div class="alert alert-warning">Cette adresse e-mail est déjà associée à un compte</div>
            {% endif %}
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-4">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
                {{ form_label(registrationForm.firstname) }}
                {{ form_widget(registrationForm.firstname) }}
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
                {{ form_label(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname) }}
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-4">
                {{ form_label(registrationForm.address) }}
                {{ form_widget(registrationForm.address) }}
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-4">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="btn btn-primary w-100">S'Enregistrer</button>
        {{ form_end(registrationForm) }}
    </main>

    {{ include('_parts/_footer.html.twig') }}

{% endblock %}
