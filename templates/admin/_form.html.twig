{{ form_start(form) }}
    {% if fakeEmailError == true %}
        <div class="alert alert-warning">L'adresse e-mail renseignée n'est pas correcte</div>
    {% endif %}
    {% if existingUserError == true %}
        <div class="alert alert-warning">Cette adresse e-mail est déjà associée à un docteur enregistré</div>
    {% endif %}
    {% if matriculeError == true %}
        <div class="alert alert-warning">Le matricule doit comporter 8 chiffres</div>
    {% endif %}
    {% if existingMatriculeError == true %}
        <div class="alert alert-warning">Ce matricule est déjà associé à un docteur enregistré</div>
    {% endif %}

    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
        {{ form_label(form.plainPassword) }}
        {{ form_widget(form.plainPassword) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
        {{ form_label(form.firstname) }}
        {{ form_widget(form.firstname) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
        {{ form_label(form.lastname) }}
        {{ form_widget(form.lastname) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-1">
        {{ form_label(form.registration_number) }}
        {{ form_widget(form.registration_number) }}
    </div>
    <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
        {{ form_label(form.specialty) }}
        {{ form_widget(form.specialty) }}
    </div>

    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
